<div class="container">
  <div class="search-box">
    <% if params[:query].present? %>
      <%= form_tag activities_path, method: :get, class: "form-span" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control search-input",
          placeholder: "Find an activity"
        %>
        <%= button_tag(type: "submit", class: "search-button") do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<h1 style="text-align:center;">Activities</h1>
<% @activities.each do |activity| %>
  <div class="flip d-flex flex-column">
    <div class="front" style="background-image: url(<%= cl_image_path activity.photo.key %>), linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3));">
      <h1 class="text-shadow"><%= activity.title %></h1>
      <div class="mb-1" style="background-color: #313131; border-radious: 5px; padding: 5px;">
        <p>Rating: <%= activity.rating %></p>
        <p><%= activity.description %></p>
        <p>ï¿¡<%= activity.price %></p>
      </div>
    </div>

    <div class="back">
      <div class="mb-5" style="width: 100%; height: 200px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <div> <strong>Location:</strong>
        <%= activity.location %>
      </div>
      <%= link_to 'Liked', activity_favourites_path(activity), method: :post, class: "btn btn-primary" %>
      <%= link_to 'Book me!', new_activity_booking_path(activity),  class: "btn btn-success"  %>
    </div>
  </div>
<% end %>
