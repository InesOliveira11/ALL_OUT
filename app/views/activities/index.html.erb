    <% @activities.each do |activity| %>
          <%= cl_image_tag activity.photo.key, class: "card" %>
            <h2 class="card-title"><%= activity.title %></h2></div>
              <p  class="card-body"><%= activity.description %></p>
              <h2>ï¿¡<%= activity.price %></h2>
              <br>
            <div class="button">
            <%= link_to 'Liked', activity_favourites_path(activity), method: :post %>
            </div>
          </div>
    <% end %>
  </div>
</div>
