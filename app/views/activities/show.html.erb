<div class="activity-card" >
  <div class="activity-info " >
    <% if @activity.photo.present? %>
      <div class="activity-image p-3 card center-all" style="background-image: url('<%= cl_image_path @activity.photo.key%>')">
          <h3><%= @activity.title %></h3>
        </div>
        <div style="background-color:white;text-align:center;color:black" class="p-2 rounded-sm">
          <p><strong>Rating:</strong><%= @activity.rating %></p>
          <p><strong>Description:</strong>
            <%= @activity.description %>
          </p>
          <p><strong>Price:</strong> <%= humanized_money_with_symbol(@activity.price) %></p>
          <%= form_tag orders_path do %>
          <%= hidden_field_tag 'activity_id', @activity.id %>
          <%= submit_tag 'Purchase', class: 'blue-button' %>
        </div>
    <% end %>
    <% else %>
    <div class="background-card-image card" style="background-image: url('https://source.unsplash.com/featured/?activity')"></div>
      <p>
        <strong>Title:</strong>
        <%= @activity.title %>
      </p>
      <p><strong>Rating:</strong><%= @activity.rating %></p>
      <p>
        <strong>Description:</strong>
        <%= @activity.description %>
      </p>
      <p><strong>Price:</strong> <%= humanized_money_with_symbol(@activity.price) %></p>
      <%= form_tag orders_path do %>
      <%= hidden_field_tag 'activity_id', @activity.id %>
      <%= submit_tag 'Purchase', class: 'blue-button' %>
      <% end %>
    </div>
  <% end %>
</div>
  <div class="activity-map center-all p-0" >
  <div style="width: 100%; height: 250px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    <strong>Location:</strong>
    <%= @activity.location %>
  </div>
</div>
</div>
