<div class="m-3 text-center">
  <%= @question.question %>

  <%= simple_form_for [ @question, @answer ], html: { class: "d-none" } do |f| %>
    <%= f.input :selected_answer, as: :radio_buttons, collection:  [@question.answer_1, @question.answer_2], input_html: { class: "tag-selector" },  item_wrapper_class: 'tag-item' %>
    <%= f.hidden_field :next, value: @question.id + 1 %>
    <%= f.submit "ðŸ‘Œ", class: "btn btn-primary" %>
  <% end %>
  <div><h1><% @question.question %></h1></div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @question.photos.first.key %>')">
    <%= @question.answer_1 %>
  </div>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @question.photos.last.key %>')">
    <%= @question.answer_2 %>
  </div>
