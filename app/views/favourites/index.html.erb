<div class="text-center mt-3">
  <h2>Your favourites</h2>
    <div class="row-favourite">
      <% @favourites.each do |favourite| %>
        <div class="col-12 mb-3 mt-3">
          <%= link_to activity_path(favourite.activity) do %>
          <div class="card-favourites" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path favourite.activity.photo.key %>)">
            <h3><%= favourite.activity.title %></h3><br>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
</div>
